generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  isAdmin Boolean
  order Orders[]
}

model Orders {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  amount Int
  seats Int[]
  showtime String

  userId String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  chargeId String @unique
  status String

  movieId String
  movie   Movies @relation(fields: [movieId], references: [id])

  expiresAt DateTime
}

model Movies {
  id        String      @id @default(uuid())
  name      String      @unique
  description String
  duration Int
  release DateTime 
  imgUrl String
  orders      Orders[]
}